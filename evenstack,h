#ifndef EVENSTACK_H
#define EVENSTACK_H
#include <stack>

using namespace std;

class EvenStack
{
    public:
        EvenStack();
        virtual ~EvenStack();

        void push(int value);
        int top();
        void pop();
        bool empty();
        int size();

        void getEvenNumbers (stack<int>);
        void emptyStack();

    protected:

    private:
        stack <int> m_even;
};

#endif // EVENSTACK_H
